  "comments": {
    "description": "Frontend and emulator format configurations",
    "fields": {
      "name": "Display name for the format",
      "default_destination": "Default installation path for this frontend (~ expands to home directory)",
      "roms_path": "Subdirectory name for ROMs within the destination",
      "metadata_path": "Optional override path for metadata location (e.g., '~/ES-DE/downloaded_media' for AppImage/Flatpak). If null, metadata is stored relative to default_destination based on metadata_subdir setting.",
      "metadata_subdir": "Whether metadata goes in subdirectories within ROM folders (true) or separate structure (false)",
      "rename_metadata_to_match_rom": "If true, metadata files are renamed to match the ROM filename (e.g., 'mario.nes' -> 'mario.png' for images). If false, metadata files use format-specific naming like 'mario-box2dfront.png'. ES-DE requires this to be true.",
      "platforms_subdir": "Whether ROMs are organized by platform subdirectories",
      "description": "Brief description of the format",
      "custom_systems_path": "Path to custom systems configuration file for adding new platforms",
      "gamelist_path": "Path to gamelist XML files directory (e.g., '~/ES-DE/gamelists'). Each platform gets its own subdirectory with a gamelist.xml file.",
      "xml_metadata_mappings": "Map from source XML fields to destination gamelist.xml fields. Format: 'SourceField': 'destfield'. Only mapped fields are renamed; unmapped fields pass through as-is. Used with --infoxml option.",
      "xml_field_conversions": "Define data type and format conversions for XML fields. Supports 'date' (format strings with {year}, {month}, {day}) and 'normalize' (scale conversions with source_scale, target_scale, decimal_places). Conversions are applied before writing to gamelist.xml.",
      "platform_mappings": "Map from Master Archive platform names to frontend directory names",
      "metadata_mappings": "Map from Master Archive metadata paths to frontend metadata paths. Format: 'Archive/Path': 'dest_subdir/filename_prefix'. The destination path includes both the subdirectory (images/, videos/, manuals/) and the filename prefix (box2dfront, video, manual). Set to null to skip that metadata type."
    },
